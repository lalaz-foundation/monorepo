{
    "name": "lalaz/database",
    "description": "Database abstraction layer with connection pooling and fluent query builder.",
    "version": "1.0.0-rc.1",
    "type": "library",
    "require": {
        "php": "^8.3",
        "psr/log": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Lalaz\\Database\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lalaz\\Database\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
