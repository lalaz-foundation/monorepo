{
    "name": "lalaz/queue",
    "description": "Background job processing with database, Redis, and sync drivers.",
    "version": "1.0.0-rc.1",
    "type": "library",
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "../database"
        },
        {
            "type": "path",
            "url": "../testing"
        }
    ],
    "require": {
        "php": "^8.3",
        "lalaz/database": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "lalaz/testing": "@dev"
    },
    "autoload": {
        "psr-4": {
            "Lalaz\\Queue\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lalaz\\Queue\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
