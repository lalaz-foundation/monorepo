{
    "name": "lalaz/storage",
    "description": "File storage abstraction with local and memory drivers for the Lalaz Framework.",
    "version": "1.0.0-rc.1",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "lalaz/framework": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Lalaz\\Storage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lalaz\\Storage\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
