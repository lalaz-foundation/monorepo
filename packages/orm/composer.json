{
    "name": "lalaz/orm",
    "description": "ActiveRecord-style ORM with migrations, seeders, and model relationships.",
    "type": "library",
    "version": "1.0.0-rc.1",
    "repositories": [
        {
            "type": "path",
            "url": "../database",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "php": "^8.3",
        "lalaz/framework": "@dev",
        "lalaz/database": "@dev"
    },
    "autoload": {
        "psr-4": {
            "Lalaz\\Orm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lalaz\\Orm\\Tests\\": "tests/"
        },
        "files": [
            "tests/Unit/helpers.php",
            "tests/Integration/helpers.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
