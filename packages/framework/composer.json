{
    "name": "lalaz/framework",
    "type": "library",
    "version": "1.0.0-rc.1",
    "description": "The Lalaz PHP Framework",
    "keywords": [
        "lalaz",
        "framework",
        "php"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Gregory Serrao",
            "email": "hi@lalaz.dev"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/log": "^3.0",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "mockery/mockery": "^1.6"
    },
    "suggest": {
        "ext-redis": "Required for high-performance Redis-based rate limiting (recommended for production)",
        "predis/predis": "Required for Redis rate limiting without phpredis extension",
        "ext-apcu": "Required for APCu-based rate limiting (single-server setups)"
    },
    "autoload": {
        "psr-4": {
            "Lalaz\\": "src/"
        },
        "files": [
            "src/Support/Functions/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Lalaz\\Framework\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/discover.php"
    ],
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "post-autoload-dump": [
            "Lalaz\\Packages\\ComposerScripts::postAutoloadDump"
        ]
    },
    "extra": {
        "lalaz": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
